
<table class="table table-striped">
	<thead class="row">
		<tr>
			<th>Name</th>
			<th>Class</th>
			<th>Strength</th>
			<th>Dexterity</th>
			<th>Vitality</th>
			<th>Intellect</th>
			<th>Health</th>
			<th></th>
		</tr>
	</thead>
	<tbody data-bind="foreach: characters, visible: characters().length > 0">
		<tr>
			<td data-bind="text: name"></td>
			<td data-bind="text: charClass"></td>
			<td data-bind="text: strength"></td>
			<td data-bind="text: dexterity"></td>
			<td data-bind="text: vitality"></td>
			<td data-bind="text: intellect"></td>
			<td data-bind="text: health"></td>
			<td>
				<button class="btn btn-xs btn-warning">Edit</button>
				<button class="btn btn-xs btn-danger">Delete</button>
			</td>
		</tr>
	</tbody>
</table>